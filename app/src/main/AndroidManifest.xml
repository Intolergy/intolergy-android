<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.intolergy.intolergy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/intolergy"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/intolergy"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/register_name" />
        <activity
            android:name=".SearchRestaurant"
            android:label="@string/search_restaurant" />
        <activity
            android:name=".MainActivity"
            android:label="@string/news" />
        <activity
            android:name=".Category"
            android:label="@string/search_by" />
        <activity
            android:name=".Find_Product"
            android:label="@string/search_product_by" />
        <activity
            android:name=".Find_Restaurant"
            android:label="@string/search_restaurant_by" />
        <activity
            android:name=".AddProduct"
            android:label="@string/add_product" />
        <activity android:name=".Products" android:label="@string/products"></activity>
    </application>

</manifest>